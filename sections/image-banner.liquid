{% schema %}
{
  "name": "Custom Image Banner",
  "tag": "section",
  "class": "section custom-image-banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner"
    }
  ]
}
{% endschema %}

<section class="custom-banner" style="background-color: {{ section.settings.background_color }};">
  <div class="banner-wrapper">
    <img 
      src="https://cdn.shopify.com/s/files/1/0740/4371/9829/files/svg_banner.svg?v=1757141819" 
      alt="Banner" 
      class="banner-svg"
      width="1440"
      height="390"
      loading="lazy">
  </div>
</section>

<style>
.custom-banner {
  
  width: 100%;
  max-width: 1440px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.banner-wrapper {
  width: 100%;
  aspect-ratio: 1440 / 390;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner-svg {
  width: 100%;
  height: 100%;
  object-fit: contain; /* ensures no cropping */
  margin: 0;
}
</style>
