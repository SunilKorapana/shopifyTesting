{% schema %}
{
  "name": "Custom Image Banner",
  "tag": "section",
  "class": "section custom-image-banner",
  "settings": [
    {
      "type": "url",
      "id": "banner_svg",
      "label": "Banner SVG URL",
      "info": "Upload your SVG file in Content → Files and paste the URL here."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Custom Image Banner"
    }
  ]
}
{% endschema %}

<section class="custom-banner" style="background-color: {{ section.settings.background_color }};">
  <div class="banner-wrapper">
    {% if section.settings.banner_svg != blank %}
      <img src="{{ section.settings.banner_svg }}" alt="Banner" class="banner-svg" loading="lazy">
    {% else %}
      <p style="text-align:center;">Upload your SVG in section settings → paste link</p>
    {% endif %}
  </div>
</section>

<style>
.custom-banner {
  width: 100%;
  max-width: 1440px;
  height: 390px;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.banner-wrapper {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.banner-svg {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}
</style>
