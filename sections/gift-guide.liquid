  padding: 60px 20px;
}

.gift-guide-left {
  flex: 1;
  text-align: left;
}

.gift-guide-right {
  flex: 1.2; /* make image area bigger */
  display: flex;
  justify-content: flex-end;
}

.gift-heading {
  font-family: 'Jost', sans-serif;
  font-weight: 600;
  font-size: 72px;
