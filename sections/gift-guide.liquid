}

.gift-description {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.5;
  color: #000;
  margin-bottom: 30px;
  max-width: 500px;
}

.gift-button {
  display: inline-block;
  position: relative;
  overflow: hidden;
  {% comment %} padding: 14px 14px; {% endcomment %}
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  font-size: 16px;
  text-decoration: none;
  color: #fff;
  background-color: #000;
  {% comment %} width: 250px; {% endcomment %}
  transition: color 0.3s ease;
  text-align: center;
}

.gift-button::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: #FFD700; /* yellow */
  transition: left 0.4s ease;
  z-index: 1;
}

.gift-button span {
  position: relative;
  z-index: 2;
}

.gift-button:hover::before {
  left: 0; /* animate from left to right */
}

.gift-button:hover {
  color: #000; /* text turns black on yellow */
}

.gift-svg {
  width: 100%;
  max-width: 700px; /* bigger image */
  height: auto;
  object-fit: contain;
}

/* Responsive */
@media (max-width: 992px) {
  .gift-guide-container {
    flex-direction: column;
    text-align: center;
    gap: 40px;
  }
  .gift-guide-left, .gift-guide-right {
    flex: unset;
    width: 100%;
  }
  .gift-description {
    margin: 0 auto 24px;
  }
  .gift-guide-right {
    justify-content: center;
  }
}
</style>
