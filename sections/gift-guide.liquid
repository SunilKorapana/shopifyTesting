{% schema %}
{
  "name": "Gift Guide Section",
  "tag": "section",
  "class": "section gift-guide-section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#FFFFFF"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Section"
    }
  ]
}
{% endschema %}

<section class="gift-guide-section" style="background-color: {{ section.settings.background_color }};">
  <div class="gift-guide-container">
    
    <!-- Left Side -->
    <div class="gift-guide-left">
      <h2 class="gift-heading">The Gift Guide</h2>
      <p class="gift-description">
        Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season.
      </p>
      <a href="#" class="gift-button">SHOP NOW â†’</a>
    </div>

    <!-- Right Side -->
    <div class="gift-guide-right">
      <img 
        src="https://cdn.shopify.com/s/files/1/0740/4371/9829/files/svg_banner_1.svg?v=1757143257" 
        alt="Gift Guide Banner" 
        width="720" 
        height="480"
        class="gift-svg">
    </div>

  </div>
</section>

<style>
.gift-guide-container {
  display: flex;
  flex-direction: row; /* horizontal */
  align-items: center;
  justify-content: space-between;
  max-width: 1200px;
  margin: 0 auto;
  gap: 20px;
}

.gift-guide-left {
  width: 40%;
}

.gift-guide-right {
  width: 60%;
}

.gift-heading {
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  font-size: 70px;
  line-height: 1;
  color: #000;
  margin-bottom: 20px;
}

.gift-description {
  font-family: 'Jost', sans-serif;
  font-weight: 400;
  font-size: 20px;
  line-height: 1.4;
  color: #000;
  margin-bottom: 20px;
}

.gift-button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 220px;
  height: 50px;
  background-color: #2563eb;
  color: white;
  text-decoration: none;
  font-family: 'Jost', sans-serif;
  font-weight: 500;
  border-radius: 8px;
  transition: all 0.3s ease;
}

.gift-button:hover {
  background-color: #1e40af;
}

.gift-button span {
  margin-left: 8px;
  transition: transform 0.3s ease;
}

.gift-button:hover span {
  transform: translateX(4px);
}

.gift-svg {
  width: 100%;
  height: auto;
  object-fit: contain;
}

/* Responsive */
@media (max-width: 768px) {
  .gift-guide-container {
    flex-direction: column;
    text-align: center;
  }
  .gift-guide-left, .gift-guide-right {
    width: 100%;
  }
  .gift-button {
    margin: 0 auto;
  }
}
</style>

